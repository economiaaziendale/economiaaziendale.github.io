
<!DOCTYPE html>
<html>
<head>
  <title></title>
</head>
<style>
ul {
  font-size: 2em;
}
i {
  font-size : 2em;
}
</style>
<body>


    <!-- AMATO -->
<p><button onclick="dbRef.set(++n1)">[ + ]</button>Dati su Amato:
<i id="h1Amato"></i></p>

    <!-- RUOCCO -->
<p><button onclick="dbRef2.set(++n2)">[ + ]</button>Dati su 3be/amato:
<i id="h13beamato"></i></p>


<script src="https://www.gstatic.com/firebasejs/4.10.1/firebase.js"></script>
<script>

  // Initialize Firebase
  var config = {
    apiKey: "AIzaSyDp-mWaWEI07pIdRUhi6vA-salEMRWz4hw",
    authDomain: "quiz-e5e5a.firebaseapp.com",
    databaseURL: "https://quiz-e5e5a.firebaseio.com/",
    projectId: "quiz-e5e5a",
    storageBucket: "quiz-e5e5a.appspot.com",
    messagingSenderId: "901845403492"
  };
  // initialize the firebase application
  firebase.initializeApp(config);
  // capture the element on the page
  // istantiate the database, getting the child object
  var database = firebase.database()

  // AMATO
  var h1Amato = document.getElementById("h1Amato");
  var dbRef = firebase.database().ref().child("amato");
  dbRef.on("value", snap => h1Amato.innerText = snap.val());
  dbRef.on("value", snap => n1 = snap.val())

  // RUOCCO
  var h13beamato = document.getElementById("h13beamato");
  var dbRef2 = firebase.database().ref().child("3be").child("amato");
  dbRef2.on("value", snap => h13beamato.innerText = snap.val());
  dbRef2.on("value", snap => n2 = snap.val())

</script>


</body>
</html>

